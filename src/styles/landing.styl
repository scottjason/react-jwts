@import 'vars.styl'

.wrap
  display flex
  flex-direction column
  justify-content center
  align-items center
  width 80%
  max-width 300px
  height 200px
  input
    width 90%
    height 30px
    font-size 14px    
    color darken(white, 20%)
    outline 0
    border none   
    border-bottom 1px solid darken(white, 20%)  
    background-color transparent
    margin-bottom 15px
  button
    width 70%
    height 40px
    margin-top 20px
    border 1px solid darken(white, 20%)
    background-color transparent
    font-size 14px    
    letter-spacing 0    
    color $neon-green    
    cursor pointer
    outline 0
    transition letter-spacing .2s ease-out
    &:hover
      letter-spacing 2px
  > p
    color darken(white, 20%)
    font-size 12px
    letter-spacing 0
    cursor pointer
    transition all .2s ease-out
    &:hover
      letter-spacing 1px
      color $neon-green